# Notion Week Summarizer - Environment Configuration
# Copy this file to .env and fill in your actual values

###################################################
# Core API Configuration
###################################################

# Notion Integration Token
# Get from: https://www.notion.so/my-integrations
# Permissions needed: Read content, Update content, Insert content
NOTION_TOKEN=secret_your_notion_integration_token_here

# Claude AI API Key  
# Get from: https://console.anthropic.com/
# Used for: AI-generated retrospectives and summaries
ANTHROPIC_API_KEY=sk-ant-your_claude_api_key_here

###################################################
# Notion Database IDs
###################################################

# Tasks Database - Where your tasks are stored
# Format: 32-character hex string (no dashes)
# Required properties: Task (title), Due Date, Type, Status
TASKS_DATABASE_ID=your_32_character_tasks_database_id

# Weekly Recap Database - Where weekly summaries are stored  
# Required properties: Week Recap (title), Personal Task Summary, What went well?, etc.
RECAP_DATABASE_ID=your_32_character_recap_database_id

# Monthly Recap Database - Where monthly summaries are stored
# Required properties: Similar to weekly but for monthly timeframes
RECAP_MONTHS_DATABASE_ID=your_32_character_monthly_recap_database_id

# Weeks Database - Date range management for weeks
# Required properties: Date Range (SET), Title, Week Number
WEEKS_DATABASE_ID=your_32_character_weeks_database_id

# Rocks Database - Major goals/milestones tracking
# Required properties: Rock (title), Status, Time Period
ROCKS_DATABASE_ID=your_32_character_rocks_database_id

# Events Database - Calendar events storage (if used)
# Required properties: Event (title), Date, Calendar Source
EVENTS_DATABASE_ID=your_32_character_events_database_id

###################################################
# Work Calendar Configuration
###################################################

# Primary work calendar
# Get ID from: Google Calendar settings → Calendar ID
# Format: usually ends with @group.calendar.google.com
WORK_CALENDAR_ID=your-work-email@company.com

# Work PR/development data tracking calendar
# Used for: Tracking development metrics and pull request data
WORK_PR_DATA_CALENDAR_ID=your_work_pr_calendar_id@group.calendar.google.com

###################################################
# Personal Calendar Configuration  
###################################################

# Main personal calendar
# Usually your primary Google account calendar
PERSONAL_CALENDAR_ID=your.email@gmail.com

###################################################
# Habit Tracking Calendars
###################################################

# Sleep pattern tracking
WAKE_UP_EARLY_CALENDAR_ID=your_wake_up_early_calendar_id@group.calendar.google.com
SLEEP_IN_CALENDAR_ID=your_sleep_in_calendar_id@group.calendar.google.com

# Health habit tracking
SOBER_DAYS_CALENDAR_ID=your_sober_days_calendar_id@group.calendar.google.com
DRINKING_DAYS_CALENDAR_ID=your_drinking_days_calendar_id@group.calendar.google.com
BODY_WEIGHT_CALENDAR_ID=your_body_weight_calendar_id@group.calendar.google.com

###################################################
# Activity Tracking Calendars
###################################################

# Fitness and exercise tracking
WORKOUT_CALENDAR_ID=your_workout_calendar_id@group.calendar.google.com

# Hobby and personal development calendars
READ_CALENDAR_ID=your_reading_calendar_id@group.calendar.google.com
CODING_CALENDAR_ID=your_coding_calendar_id@group.calendar.google.com
ART_CALENDAR_ID=your_art_calendar_id@group.calendar.google.com
VIDEO_GAMES_CALENDAR_ID=your_gaming_calendar_id@group.calendar.google.com

# Development and travel tracking
PERSONAL_GITHUB_DATA_CALENDAR_ID=your_github_data_calendar_id@group.calendar.google.com
TRAVEL_CALENDAR_ID=your_travel_calendar_id@group.calendar.google.com

###################################################
# Google Calendar Authentication - Work
###################################################

# OAuth2 credentials for work Google account
# Get from: https://console.cloud.google.com/ → APIs & Services → Credentials
# Scopes needed: https://www.googleapis.com/auth/calendar.readonly

# Client ID from your OAuth2 application
WORK_GOOGLE_CLIENT_ID=your_work_client_id.apps.googleusercontent.com

# Client Secret from your OAuth2 application  
WORK_GOOGLE_CLIENT_SECRET=your_work_client_secret

# Refresh Token (generate once through OAuth flow)
# Use: https://developers.google.com/oauthplayground or run auth script
WORK_GOOGLE_REFRESH_TOKEN=your_work_refresh_token

###################################################
# Google Calendar Authentication - Personal
###################################################

# OAuth2 credentials for personal Google account
# Separate credentials needed if using different Google accounts

# Client ID for personal account access
PERSONAL_GOOGLE_CLIENT_ID=your_personal_client_id.apps.googleusercontent.com

# Client Secret for personal account access
PERSONAL_GOOGLE_CLIENT_SECRET=your_personal_client_secret

# Refresh Token for personal account
# Generate through OAuth flow for your personal Google account
PERSONAL_GOOGLE_REFRESH_TOKEN=your_personal_refresh_token

###################################################
# Optional Configuration
###################################################

# Set to 'development' for verbose logging, 'production' for minimal logs
NODE_ENV=development

# Set to 'true' to enable detailed API request logging
DEBUG_API_CALLS=false

# Cost tracking - set to 'true' to log estimated API costs
TRACK_COSTS=false